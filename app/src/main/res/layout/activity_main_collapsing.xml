<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:fitsSystemWindows="false"
        android:theme="@style/AppTheme">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                app:layout_collapseMode="pin"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/your_image_view"
                    android:layout_height="400dp"
                    android:layout_width="match_parent"
                    android:src="@color/colorPrimary"/>

                <View
                    android:id="@+id/shadow_view"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:alpha=".5"
                    android:background="#000000"/>
            </FrameLayout>
            <LinearLayout
                android:layout_marginTop="?actionBarSize"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="40dp"
                    app:cardCornerRadius="6dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderCircularHandlerEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="1"
                        app:sliderStartAutoCycle="true" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#E0FFFF"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.gridlayout.widget.GridLayout
                        app:orientation="horizontal"
                        android:numColumns="4"
                        app:columnCount="4"
                        app:rowCount="2"
                        android:verticalSpacing="24dp"
                        android:horizontalSpacing="10dp"
                        android:gravity="center"
                        android:columnWidth="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/btnInfoTagihan"
                                style="?android:borderlessButtonStyle"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/size_icon"
                                android:layout_height="@dimen/size_icon"
                                app:srcCompat="@drawable/ic_info"
                                android:src="@drawable/ic_info"/>
                            <TextView
                                android:textSize="10sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Info\nTagihan"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/btnListPengaduan"
                                style="?android:borderlessButtonStyle"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/size_icon"
                                android:layout_height="@dimen/size_icon"
                                app:srcCompat="@drawable/ic_list_pengaduan"
                                android:src="@drawable/ic_list_pengaduan"/>
                            <TextView
                                android:textSize="10sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status\nPengaduan"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/btnTambahPengaduan"
                                style="?android:borderlessButtonStyle"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/size_icon"
                                android:layout_height="@dimen/size_icon"
                                app:srcCompat="@drawable/ic_pengaduan"
                                android:src="@drawable/ic_pengaduan"/>
                            <TextView
                                android:textSize="10sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pengaduan"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/btnLoket"
                                style="?android:borderlessButtonStyle"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/size_icon"
                                android:layout_height="@dimen/size_icon"
                                app:srcCompat="@drawable/ic_loket"
                                android:src="@drawable/ic_loket"/>
                            <TextView
                                android:textSize="10sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loket"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/btnPasangBaru"
                                style="?android:borderlessButtonStyle"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/size_icon"
                                android:layout_height="@dimen/size_icon"
                                app:srcCompat="@drawable/ic_pasang_baru"
                                android:src="@drawable/ic_pasang_baru"/>
                            <TextView
                                android:textSize="10sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pasang\nBaru"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/btnPesan"
                                style="?android:borderlessButtonStyle"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/size_icon"
                                android:layout_height="@dimen/size_icon"
                                app:srcCompat="@drawable/ic_pasang_baru"
                                android:src="@drawable/ic_pasang_baru"/>
                            <TextView
                                android:textSize="10sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kotak\nMasuk"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/btnBerita"
                                style="?android:borderlessButtonStyle"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/size_icon"
                                android:layout_height="@dimen/size_icon"
                                app:srcCompat="@drawable/ic_pasang_baru"
                                android:src="@drawable/ic_pasang_baru"/>
                            <TextView
                                android:textSize="10sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Berita"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/btnPoint"
                                style="?android:borderlessButtonStyle"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:layout_width="@dimen/size_icon"
                                android:layout_height="@dimen/size_icon"
                                app:srcCompat="@drawable/ic_pasang_baru"
                                android:src="@drawable/ic_pasang_baru"/>
                            <TextView
                                android:textSize="10sp"
                                android:shadowColor="#000000"
                                android:shadowDx="1.5"
                                android:shadowDy="1.3"
                                android:shadowRadius="1.6"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:layout_margin="5dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Poin"/>
                        </LinearLayout>
                    </androidx.gridlayout.widget.GridLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:layout_marginTop="24dp"
                android:fitsSystemWindows="true"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/AppTheme"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_collapseMode="pin"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:elevation="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/idProfile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#FFFFFF"
                        app:srcCompat="@drawable/ic_account_box"
                        android:src="@drawable/ic_account_box"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <ImageView
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        app:srcCompat="@drawable/mascot"
                        android:text="@string/app_name"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/rvGangguan"
        app:behavior_overlapTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>