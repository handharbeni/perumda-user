<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:behavior_hideable="false"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="15dp"
        android:minHeight="500dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textAllCaps="true"
            android:padding="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="BUAT PENGADUAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:inputType="numberSigned"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:id="@+id/nosal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nosal" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nama"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nama" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/alamat"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="alamat" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/unitlayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:smsp_floatingLabelColor="@color/colorAccent"
            app:smsp_floatingLabelText="Unit Layanan"
            app:smsp_hint="Unit Layanan"
            app:smsp_hintColor="@color/colorAccent"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:inputType="text"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:enabled="false"
                android:id="@+id/nohandphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nohandphone" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Jenis Aduan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.chip.ChipGroup
                app:singleSelection="true"
                app:itemSpacing="20dp"
                app:checkedChip="@id/chipADM"
                android:id="@+id/jnsaduan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    app:checkedIconEnabled="true"
                    android:text="TKNS"
                    android:id="@+id/chipTKNS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    app:checkedIconEnabled="true"
                    android:text="ADM"
                    android:id="@+id/chipADM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:textAlignment="textStart"
                android:minHeight="100dp"
                android:id="@+id/isiaduan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="isiaduan"
                android:gravity="start" />
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:background="#696666"
            android:layout_marginTop="5dp"
            android:id="@+id/foto"
            app:srcCompat="@drawable/ic_photo_camera"
            android:src="@drawable/ic_photo_camera"
            android:layout_gravity="center"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:ignore="VectorDrawableCompat" />
        <com.google.android.material.textfield.TextInputLayout
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="gps" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:text="SIMPAN"
            android:id="@+id/btnSimpan"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
